{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container-fluid">
    <div class="row">
    {% for article in articles %}
        <div class="col-7 ">
        <p class="ml-5"><img class="img-fluid" src="{{article.imageArticle}}" alt=""></p>
        </div>
        <div class="col-5">
        <p class="date-style">Nouveaut√© - {{article.date|date("m/d/Y", "Europe/Paris") }}</p>
        <p class="title-size">{{article.titre}}</p>
        </div>
        {% endfor %}
    </div>
</div>

  



{% endblock %}