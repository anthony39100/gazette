{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    <div class="container-fluid" >
    <div class="row">
    <div class="col-7 bg-register" style="background-image:url('{{asset("images/bg-register.png")}}');background-size:cover;height:100vh">
    
    </div>
    <div class="col-5">
    <form method="post" >


    <h1 class="h3 mb-3 font-weight-normal text-center mt-5"><a href="/"> La Gazette</a></h1>
   
    <input type="text" value="{{ last_username }}" placeholder="votre nom d'utilisateur" name="username" id="inputUsername" class="form-control mt-5" autocomplete="username" required autofocus>
  
    <input type="password" name="password" id="inputPassword" placeholder="votre mot de passe" class="form-control mt-5 mb-5" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
   {% if error %}
       <p class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
      {% endif %}

    

        {# <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> se souvenir de moi
            </label>
        </div> #}
   

    <button class="btn btn-lg btn-primary w-100"  type="submit">
        connexion
    </button>
</form>
    </div>
    </div>
    </div>
{% endblock %}
